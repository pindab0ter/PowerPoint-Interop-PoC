<Window x:Class="PowerPoint_Interop_PoC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PowerPoint_Interop_PoC"
        mc:Ignorable="d"
        Title="PowerPoint Interop PoC" Height="110" Width="250">
    <Grid Name="pnlMainGrid">
        <Grid Margin="10,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <Label x:Name="lblSlide" Content="Current slide:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <ComboBox x:Name ="cbSlides" HorizontalAlignment="Right" VerticalAlignment="Center" Width="120" />
        </Grid>
        <Button x:Name="btnBackgroundColor" Content="Toggle background color" Margin="0,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
